---
import { Image } from "astro:assets";
import BaseLayout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
	<div class='gif'>
		<Image
			loading={"eager"}
			width='300'
			height='259'
			alt='RaccoonLaptopGif'
			src='/laptop.webp'
		/>
	</div>
	<h2>{frontmatter.title}</h2>
	<slot />
	<ul class='badge__list'>
		<li>
			<span class='badge badge--item'>PLATFORM</span>{frontmatter.platform}
		</li>
		<li><span class='badge badge--item'>STACK</span>{frontmatter.stack}</li>
		<li>
			<span class='badge badge--item'>WEBSITE</span><a
				class='badge__link'
				href={frontmatter.website}
				target='_blank'>{frontmatter.website}</a
			>
		</li>
		{
			frontmatter.github && (
				<li>
					<>
						<span class='badge badge--item'>GITHUB</span>
						<a class='badge__link' href={frontmatter.github} target='_blank'>
							{frontmatter.github}
						</a>
					</>
				</li>
			)
		}
	</ul>
	<div class='center'>
		<Image
			class='pro-img'
			width='500'
			height='281'
			loading={"eager"}
			src={frontmatter.worksImage1.url}
			alt={frontmatter.worksImage1.alt}
		/>
		<Image
			class='pro-img'
			width='500'
			height='281'
			src={frontmatter.worksImage2.url}
			alt={frontmatter.worksImage2.alt}
		/>
		<Image
			class='pro-img'
			width='500'
			height='281'
			src={frontmatter.worksImage3.url}
			alt={frontmatter.worksImage3.alt}
		/>
	</div>
</BaseLayout>
