---
import { Image } from "astro:assets";

interface Props {
	url: string;
	image: string;
	title: string;
	date: string;
}

const { url, image, title, date } = Astro.props;
---

<li class='card'>
	<a class='card__link' href={url}>
		<div class='center'>
			<Image
				class='card__img'
				width='226'
				height='127'
				src={image}
				alt='PostImage'
			/>
		</div>
		<h3 class='card__title'>
			{title}
		</h3>
	</a>
</li>
