import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
const pageTitle = "Nomso Ikem";
---

<Layout pageTitle={pageTitle}>
	<div class='gif'>
		<Image width='300' height='259' alt='RaccoonSpaceGif' src='/space.webp' />
	</div>
	<h1 class='dev'>Nomso Ikem</h1>
	<span class='badge'>Digital Craftsman (Software Developer)</span>
	<h2 class='about'>About</h2>
